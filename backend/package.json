{
  "name": "mvc-usuarios-backend",
  "version": "1.0.0",
  "description": "API Backend para gesti√≥n de usuarios con PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageDirectory=coverage",
    "test:sonar": "jest --coverage --coverageReporters=lcov --coverageReporters=text-summary --testResultsProcessor=jest-sonar-reporter --collectCoverageFrom=[\"**/*.js\",\"!**/node_modules/**\",\"!**/coverage/**\",\"!jest.config.js\"]",
    "test:ci": "jest --coverage --coverageReporters=lcov --coverageReporters=text-summary --silent --testResultsProcessor=jest-sonar-reporter",
    "sonar": "sonarqube-scanner",
    "sonar:local": "sonarqube-scanner -Dsonar.host.url=http://localhost:9000",
    "test": "jest --coverage --coverageReporters=text --coverageReporters=lcov --testResultsProcessor=jest-sonar-reporter",
    "test:summary": "jest --coverage --verbose --silent",
    "test:percentage": "jest --coverage --testLocationInResults --json | jq '.numPassedTests / (.numPassedTests + .numFailedTests) * 100'",
    "test:stats": "jest --coverage --silent --no-coverage",
    "test:quick": "jest --no-coverage --passWithNoTests"
  },
  "dependencies": {
    "@sendinblue/client": "^3.3.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "resend": "^6.5.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@faker-js/faker": "^10.1.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.0.1",
    "sonarqube-scanner": "^4.3.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!server.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "keywords": [
    "api",
    "postgresql",
    "express",
    "usuarios",
    "sonarqube"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}
